<% if not @article_cur.published_at.nil? %>
  <%= link_to "Unpublish", unpublish_admin_article_path(@article_cur), :title => "Unpublish #{@article_cur.title}" %>
<% elsif @article_cur.can_be_published? %>
  <%= link_to "Publish", publish_admin_article_path(@article_cur), :title => "Publish #{@article_cur.title}" %>
<% else %>
  <%= link_to "Commit", commit_admin_article_path(@article_cur), :title => "Commit #{@article_cur.title}" %>
<% end %>
