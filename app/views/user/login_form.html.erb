<%= form_tag login_path do %>
  <%= label_tag :email %><br />
  <%= text_field_tag :email %></br >

  <%= label_tag :password %><br />
  <%= password_field_tag :password %><br />

  <% if params[:landing_page] %>
    <%= hidden_field_tag :landing_page, params[:landing_page] %>
  <% end %>

  <br />
  <%= submit_tag "Login" %>
<% end %>
